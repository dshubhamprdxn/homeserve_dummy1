---
layout: layouts/base-layout.njk
---
<article class="blog-content-holder">
  {% set title = title %}
  {% set basePath = basePath %}
  {% set src = imageSrc %}
  {% set planDetails = planDetails %}
  {% set terms = terms %}
  {% include "partials/product-details/_details-header.njk" %}
  

  {{content | safe}}

  {#<div class="details-holder">
    <div class="wrapper">

      <div class="left-column">
        <div class="covered-holder">
          <div class='covered-title'>
            <label>What's covered</label>
          </div>
          <div class='covered-content'>
            <ul class='covered-details'>
              {%- for cover in covered %}
              <li>{{cover}}</li>
              {%- endfor %}
          </div>
        </div>
      </div>

      <div class="right-column">
        {% include "partials/product-details/_details-right-panel.njk" %}
      </div>

    </div>
  </div>#}

  {#<div class='cover-info' id='product-cover-info'>
    <div class="wrapper">
      <div class="cover-title">
        <label>Important coverage information</label>
      </div>

      <div class='cover-det'>
        <div class="cover-list">
          <div class="svg-eli">
            <label>Eligible</label>
          </div>
          <div>
            <ul class='eli-details'>
            {%- for eli in eligible %}
              <li>{{eli}}</li>
            {%- endfor %}
          </div>
        </div>

        <div class="cover-list">
          <div class="svg-nt-eli">
            <label>Not Eligible</label>
          </div>
          <div>
            <ul class='nt-eli-details'>
            {%- for nteli in notEligible %}
              <li>{{nteli}}</li>
            {%- endfor %}
          </div>
        </div>

        <div class="cover-list">
          <div class="svg-exc">
            <label>Exclusions</label>
          </div>
          <div>
            <ul class='exc-details'>
            {%- for exc in exclusions %}
              <li>{{exc}}</li>
            {%- endfor %}
          </div>
          <span class="see-more-less">Additional limitations apply. See more.</span>
        </div>
      </div>
      <div class="product-small-print">
        {{smallProductPrint | safe}}
      </div>
    </div>
  </div>#}

  <div class="repair-mgmt-corp">
    <div class="wrapper">
      <p>HomeServe USA Repair Management Corp. ("HomeServe"), with corporate offices located at 601 Merritt 7, 6th Floor, Norwalk, CT 06851, is an&nbsp;<em>independent company separate from your local utility or community</em>&nbsp;and offers this optional service plan as an authorized representative of the contract provider.</p>
    </div>
  </div>
  <section class="product-ribbon">
    <div class="wrapper">
      <div class="main">
        <p>{{title}} for only {{planCost}}</p>
      </div>
      <div class="cart-button">
        <button class="add-to-cart" data-prod-id="{{productId}}">
          <a>Add To Cart</a>
        </button>
        <button class="proceed-to-checkout" data-checkout-id="{{productId}}">
          <a href="/checkout/">Proceed To Checkout</a>
        </button>
      </div>
    </div>
  </section>
</article>

