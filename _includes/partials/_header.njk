<header class="header-data">
  <div class="plp-header-top">
    <div class="top-bar">
      <div class="top-container">

        <div class='new-zip-holder slot'>
          <div class="addr-holder">
            <span class="city-name"></span>
            <span class="state-name"></span>
            <span class="zip-code"></span>
            &nbsp;
          </div>

          <div class=''>
            <span class='enter-zip-data'>Enter Zip</span>
          </div>
          <div class="popup">
            <a class="close-popup js-close-popup">X</a>
            <div class="wrapper-in">
              <h4 class="heading">Viewing plans for:</h4>
              <p class="city-zip"><span class="city-name"></span> <span class="state-name"></span> <span class="zip-code"></span></p>
              <div class="label">
                <label for="zipcode">
                    <svg fill="#db022d" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="icon"><circle cx="12" cy="12" r="11"></circle>
                    <path fill="#fff" d="M10.5 4h3v10h-3zM10.5 16h3v3h-3z"></path></svg>
                    Changing your ZIP Code may change the contents of your shopping cart
                </label>
              </div>
              <form class="popup-form">
                <div class="add-zip">
                  <input type="text" maxlength="5" placeholder="Enter Your ZIP Code"/>
                  <label class='zip-error head-error'>Please input a valid 5 digit ZIP Code</label>
                </div>
                <button>Change ZIP</button>
              </form>
            </div>
          </div>
        </div>

        <div class='slot'>
          <div>
            <span class="hover-change header-cart">
              <svg xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 32 32">
                <title>basket</title>
                <path d="M0 14v-3h3.75l7.531-7.532A1.454 1.454 0 0 1 11.188 3a1.5 1.5 0 1 1 1.5 1.5c-.111 0-.209-.041-.312-.063L5.812 11h19.354l-6.525-6.579c-.129.036-.252.079-.391.079a1.5 1.5 0 1 1 1.5-1.5c0 .153-.045.293-.088.433L27.229 11H31v3H0zm24.869 14.902c-.293 1.172-1.105 1.107-1.105 1.107l-16.595.032c-.846 0-1.073-1.072-1.073-1.072L1.709 15.014l27.574-.026-4.414 13.914zM9.999 17h-1v5h1v-5zm0 6h-1v5h1v-5zm2-6H11v5h.999v-5zm0 6H11v5h.999v-5zm2-6h-1v5h1v-5zm0 6h-1v5h1v-5zM16 17h-1v5h1v-5zm0 6h-1v5h1v-5zm2-6h-1v5h1v-5zm0 6h-1v5h1v-5zm2-6h-1v5h1v-5zm0 6h-1v5h1v-5zm2-6h-1v5h1v-5zm0 6h-1v5h1v-5z"></path>
              </svg>
            Cart(<span class='count-prod'>0</span>)
            </span>
            <div class='cart-popup'>
              {% set taxDisp = 'tax-hide' %}
              {% include "partials/_cart-data.njk" %}
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="wrapper">
      <h1 class="logo"><a href="/" title="{{ pageTitle }}" ><img src="/assets/images/header-logo.svg" alt="{{ title }}" /></a></h1>
    </div>
  </div>
</header>