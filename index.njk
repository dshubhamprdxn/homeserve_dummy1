---
layout: layouts/base-layout.njk
footerStyle: 'landing'
headerStyle: 'landing'
isHome: true
pagination:
  data: collections.landingData
  size: 1
  alias: landing
---

<div class="banner-image">
	<figure>
		<img src="/assets/images/data-landing-page/HomePageHeroKitchen.jpg">
	</figure>
</div>
<div class="hero-header">
	<div class="container-holder">
		<div class="zip-holder">
			<div class="content">
				<h2>
					{{ landing.data.quote | safe }}
				</h2>
			</div>

			<div class="zip-holder">
				<div class="zip-content">
					<div class="zip-header">{{ landing.data.repairPlans }}</div>
					<div class="zip-input-holder">
						<input class="zip-value" type="text" maxlength="5" placeholder="Enter Your ZIP Code"/>
						<label class='zip-error top-error'>Please input a 5 digit ZIP Code.</label>
						<button class='go-btn'>{{ landing.data.buttonData }}</button>
					</div>

					<div class="existing-zip">
						<div class="addr-holder">
				            <span class="home-city"></span>
				            <span class="home-state"></span>
				            <span class="home-zip"></span>
          				</div>
          				<button class='view-plans'>View Plans</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{{ landing.templateContent | safe }}

<div class="online-quote">
	<div class="wrapper">
		<p>{{landing.data.bottomQuote}}</p>
		<form class="zip-form">
			<div class="zip-code">
				<input type="text" maxlength="5" placeholder="Enter Your ZIP Code"/>
				<label class='zip-error bottom-error'>Please input a 5 digit ZIP Code.</label>
			</div>
			<button>{{ landing.data.buttonData }}</button>
		</form>
		<div class="existing-zip-down">
			<div class="addr-holder">
	            <span class="home-city"></span>
	            <span class="home-state"></span>
	            <span class="home-zip"></span>
			</div>
			<button class='view-plans-down'>View Plans</button>
		</div>
	</div>
</div>
